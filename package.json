{
  "name": "claude-projects-monorepo",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "build": "turbo run build && npm run deploy:api",
    "compile": "turbo run compile",
    "watch": "turbo run watch",
    "test": "turbo run test",
    "test:e2e": "jest --config jest.config.e2e.js",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:api": "cd packages/api && ./scripts/deploy-local.sh",
    "prepare": "husky",
    "typecheck": "turbo run compile"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "socket.io-client": "^4.7.5",
    "ts-jest": "^29.1.1",
    "turbo": "^2.7.6",
    "typescript": "^5.3.3"
  }
}
